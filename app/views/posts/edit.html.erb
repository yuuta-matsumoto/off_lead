<%= render '/layouts/header'%>

<div class="main"> 
  <div class="main-wrapper">
  <%= render_breadcrumbs separator: ' > ' %><br>
      <div class="new-post">
        <div class="new-post-top">投稿を編集</div>
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.text_field :title, class: "form-control", placeholder:"タイトルを入力してください"%>
          </div>
          <div class="form-group">
            <%= f.text_area :content, class: "form-control", rows: "12", placeholder:"内容を入力してください" %>
          </div>
          <div class="form-group">
            <%= f.number_field :price, class: "form-control", placeholder:"金額を入力してください" %>
          </div>
          <div class="form-group">
            <%= f.label '画像'%>
            <%= f.file_field :img, class: "image" %>
          </div>
          <%= f.submit '更新する', class: 'btn btn-primary mb-3' %>
        <% end %>
  </div>
</div>