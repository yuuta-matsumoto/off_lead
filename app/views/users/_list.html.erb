<div class="users-box">
  <ul>
    <% contents.each do |user| %>
      <div class="users-repeat-box">
        <li class="users-box-left-info">
          <% if user.img?%>
            <img src='<%= user.img %>' alt="ユーザーアイコン" width="110" height="110">
          <% else %>
            <%= image_tag 'default.png', :alt => "ユーザーアイコン", :size => '110x110'%>
          <% end %>
        </li>
        <div class="users-box-right-info">
          <li class="users-name"><%= user.name%></li>
          <li class="users-content"><%= user.content %></li>
        </div>
          <div class="clearfix"></div>
        <a href="/users/<%= user.id %>"></a>
      </div>
    <% end %>
  </ul>
    <div class="users-paginate-bottom">
</div>