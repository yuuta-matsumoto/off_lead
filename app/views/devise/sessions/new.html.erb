<%= render "/layouts/header"%>

<div class="users-main">
  <h2>ログイン</h2>
    <div class="users-login-wrapper">
      <div class="users-login-left">
        <p>初めてご利用の方</p>
        <%= link_to "新規会員登録", new_user_registration_path, class: "btn btn-primary btn-lg legistration-button" %>
        <p>会員登録をせずに利用する方</p>
        <%= link_to "ゲストログイン", "#", class: "btn btn-secondary btn-md guest-login-button" %>
      </div>
      <div class="users-login-right">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label 'メールアドレス' %><br />
            <%= f.email_field :email, autofocus: true,  autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password" , class: "form-control"%>
          </div>


          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary btn-lg"%>
          </div>
        <% end %>
      </div>
      <div class="clearfix"></div>
    </div>
</div>