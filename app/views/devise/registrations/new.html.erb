<%= render "/layouts/header"%>

<div class="users-main">
  <div class="users-main-wrapper">
    <h2>会員登録</h2>
    <div class="users-registration-wrapper">
      <div class="users-registration-left">
        <p>登録済みの方</p>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary btn-lg login-button" %>
        <p>会員登録をせずに利用する方</p>
        <%= link_to 'ゲストログイン', users_guest_sign_in_path, class: "btn btn-secondary btn-md guest-login-button", method: :post %>
      </div>
      <div class="users-registration-right">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :名前 %><br />
            <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :パスワード（確認） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "登録する", class: "btn btn-primary btn-lg"%>
          </div>
        <% end %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
